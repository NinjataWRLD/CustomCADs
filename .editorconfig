# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
tab_width = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
